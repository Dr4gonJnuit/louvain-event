<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head.ejs'); %>
    </head>
    
    <body>
        <%- include('partials/daynight.ejs'); %>
        <header>
            <%- include('partials/header.ejs', {login: logine, date: year}); %>
        </header>
        
        <br><br>
        
        <h1>Add an event</h1>
        <form action="newEvent" method="post">
            <table id="newEvent" width="80%" height="500">
                <tr>
                    <td width="450px">Event: <input name="event" type="text" style="width: 250px;"></td>
                    <td rowspan="7">Description de l'événement: <textarea name="description" rows="20" cols="120"></textarea></td>
                </tr>
                <tr>
                    <td>Location: <input name="adresse" type="text" style="width: 230px;"></td>
                </tr>
                <tr>
                    <td>Date: <input name="date" type="date" style="width: 150px;"></td>
                </tr>
            </table>
            
            <br>
            
            <input type="submit" value="Enregistrer">
        </form>

    </body>
</html>
